{
  "name": "redux-toolkit-course",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://localhost:5000",
  "scripts": {
    "start": "react-scripts start",
    "backend": "json-server --watch src/json-server/db.json --port 5000 --delay=1000 --routes src/json-server/routes.json",
    "start:fullstack": "concurrently \"npm run backend\" \"npm run start\"",
    "build": "tsc --noEmit && npm run test -- --watchAll=false && CI= react-scripts build NODE_ENV=production",
    "eject": "react-scripts eject",
    "test": "react-scripts test",
    "test:jest": "jest",
    "test:watch": "jest --verbose --watchAll --no-cache --runInBand",
    "test:cypress": "npx cypress run",
    "test:cypress-open": "npx cypress open --browser edge",
    "test:cypress-headed": "npx cypress --headed",
    "tsc:check": "npm run tsc:src && npm run tsc:cypress",
    "tsc:src": "tsc --noEmit --project tsconfig.json",
    "tsc:cypress": "tsc --noEmit --project cypress/tsconfig.json",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "4.0.0-alpha.60",
    "@material-ui/pickers": "^3.3.10",
    "@material-ui/styles": "^4.11.4",
    "@reduxjs/toolkit": "^1.6.2",
    "axios": "^0.24.0",
    "clsx": "^1.1.1",
    "formik": "^2.2.9",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-router": "^6.0.2",
    "react-router-dom": "^6.0.2",
    "react-scripts": "4.0.3",
    "redux": "^4.1.2",
    "redux-injectors": "^1.3.0",
    "reselect": "^4.1.2",
    "typesafe-actions": "^5.1.0",
    "typescript": "^4.4.4",
    "typestyle": "^2.1.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@applitools/eyes-cypress": "^3.22.8",
    "@bahmutov/cy-api": "^1.6.0",
    "@cypress/code-coverage": "^3.9.11",
    "@percy/cypress": "^3.1.1",
    "@testing-library/cypress": "^8.0.1",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/common-tags": "^1.8.1",
    "@types/istanbul-lib-coverage": "^2.0.3",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@types/react-redux": "^7.1.20",
    "@types/uuid": "^8.3.1",
    "@types/webpack-env": "^1.16.3",
    "@types/yup": "^0.29.13",
    "concurrently": "^6.3.0",
    "coveralls": "^3.1.1",
    "cypress": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-jest-dom": "^3.9.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-testing-library": "^5.0.0",
    "husky": "^7.0.4",
    "istanbul-lib-coverage": "^3.2.0",
    "json-server": "^0.17.0",
    "lint-staged": "^11.2.6",
    "msw": "^0.35.0",
    "netlify-plugin-cypress": "^2.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "uuid": "^8.3.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npm run eslint -- --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ],
    "*.{js,css,md}": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit"
    }
  },
  "nyc": {
    "exclude": "server/lib/migrations"
  }
}
