{
  "name": "redux-toolkit-course",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "backend": "json-server --watch db.json --port 5000 --delay=1000",
    "start:fullstack": "concurrently \"npm run backend\" \"npm run start\"",
    "build": "tsc --noEmit && npm run test -- --watchAll=false && npx cypress run --headless && CI= react-scripts build NODE_ENV=production",
    "eject": "react-scripts eject",
    "test": "react-scripts test",
    "test:jest": "jest",
    "test:watch": "jest --verbose --watchAll --no-cache --runInBand",
    "test:cypress": "npx cypress run",
    "test:cypress-open": "npx cypress open --browser edge",
    "test:cypress-headed": "npx cypress --headed",
    "tsc:check": "npm run tsc:src && npm run tsc:cypress",
    "tsc:src": "tsc --noEmit --project tsconfig.json",
    "tsc:cypress": "tsc --noEmit --project cypress/tsconfig.json",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "4.0.0-alpha.57",
    "@material-ui/pickers": "^3.3.10",
    "@material-ui/styles": "^4.11.3",
    "@reduxjs/toolkit": "^1.5.0",
    "axios": "^0.21.1",
    "clsx": "^1.1.1",
    "formik": "^2.2.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "redux": "^4.0.5",
    "redux-injectors": "^1.3.0",
    "reselect": "^4.0.0",
    "typesafe-actions": "^5.1.0",
    "typescript": "^4.2.3",
    "typestyle": "^2.1.0",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@applitools/eyes-cypress": "^3.20.4",
    "@bahmutov/cy-api": "^1.5.0",
    "@cypress/code-coverage": "^3.9.2",
    "@percy/cypress": "^2.3.4",
    "@testing-library/cypress": "^7.0.4",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.8.3",
    "@types/common-tags": "^1.8.0",
    "@types/istanbul-lib-coverage": "^2.0.3",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.34",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/react-redux": "^7.1.16",
    "@types/react-router": "^5.1.12",
    "@types/react-router-dom": "^5.1.7",
    "@types/uuid": "^8.3.0",
    "@types/webpack-env": "^1.16.0",
    "@types/yup": "^0.29.11",
    "concurrently": "^6.0.0",
    "coveralls": "^3.1.0",
    "cypress": "^6.8.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-jest-dom": "^3.6.5",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "husky": "^4.3.8",
    "istanbul-lib-coverage": "^3.0.0",
    "json-server": "^0.16.3",
    "lint-staged": "^10.5.4",
    "msw": "^0.27.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3",
    "uuid": "^8.3.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npm run eslint -- --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ],
    "*.{js,css,md}": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit"
    }
  },
  "nyc": {
    "exclude": "server/lib/migrations"
  }
}
